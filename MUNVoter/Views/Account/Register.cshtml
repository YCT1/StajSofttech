@model MUNVoter.Models.Register
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_LayoutPageMain.cshtml";
}
<div class="col-sm-4"></div>
<div class="col-sm-4">
    <h1>Mun Voting App</h1>
    <p>by Yekta Can Tursun</p>
    <hr />
    <h2>Register</h2>
    @Html.ValidationSummary()

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label> Username</label>
            @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label> Email</label>
            @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label> Password</label>
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>
        <br />
        <button tpye="submit" class="btn btn-primary">Submit</button>
    }

    <br />
    <p>Already have an account?, don't worry 	&nbsp; <a href="/Account/Login" class="btn btn-success">Login</a></p>

</div>

