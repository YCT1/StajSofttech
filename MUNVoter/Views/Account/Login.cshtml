@model MUNVoter.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPageMain.cshtml";
}



<div class="col-sm-4"></div>
<div class="col-sm-4">
    <h1>Mun Voting App</h1>
    <p>by Yekta Can Tursun</p>
    <hr />
    <h2>Login</h2>

    @Html.ValidationSummary()

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

        <div class="form-group">
            <label>Username</label>
            @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Username</label>
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>
        <br />
        <button class="btn btn-primary" type="submit">Login</button>
    }
</div>