
@{
    
    Layout = "~/Views/_LayoutPageMain.cshtml";
}

<div class="col-sm-3"></div>

<div class="col-sm-6" align="center">
    <div class="target">
        @{
            Html.RenderAction("RenderMotionListUser", "View", new { sessionID = @ViewBag.SessionID });
        }

    </div>
</div>
<script type="text/javascript">

        $(function () {
            var hubNotify = $.connection.SessionHub;

            $.connection.hub.start().done(function () {
                //location.reload();
            });

            hubNotify.client.refreshSessionPage = function (i) {
                if (i == @ViewBag.SessionID) {
                    $('.target').load('/View/RenderMotionListUser?sessionID=' + i);
                    console.log("True");
                }

           };
        });

</script>
